{
  "name": "Project",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Project title"
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "image_url": {
      "type": "string",
      "description": "Project image URL"
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technologies used"
    },
    "live_url": {
      "type": "string",
      "description": "Live project URL"
    },
    "github_url": {
      "type": "string",
      "description": "GitHub repository URL"
    },
    "category": {
      "type": "string",
      "enum": [
        "web",
        "mobile",
        "desktop",
        "design",
        "other"
      ],
      "description": "Project category"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Whether to feature this project"
    }
  },
  "required": [
    "title",
    "description"
  ]
}